<script setup lang="ts">
import { ref, reactive } from 'vue'
import { useRouter } from 'vue-router'
import { useAuth } from '@/composables/useAuth'

const router = useRouter()
const { signUp, loading } = useAuth()

const showPassword = ref(false)
const errorMessage = ref('')
const successMessage = ref('')

const formData = reactive({
  email: '',
  password: '',
  fullName: '',
  university: '',
  major: '',
  year: new Date().getFullYear(),
  phone: '',
  acceptTerms: false
})

const handleRegister = async () => {
  errorMessage.value = ''
  successMessage.value = ''
  
  // Validation
  if (formData.password.length < 6) {
    errorMessage.value = 'Password minimal 6 karakter'
    return
  }
  
  if (!/^08\d{8,11}$/.test(formData.phone)) {
    errorMessage.value = 'Format nomor WhatsApp tidak valid (08xxxxxxxxxx)'
    return
  }
  
  try {
    const { error } = await signUp(
      formData.email,
      formData.password,
      {
        full_name: formData.fullName,
        university: formData.university,
        major: formData.major,
        year: formData.year,
        phone: formData.phone
      }
    )
    
    if (error) {
      // Handle specific error messages
      if (error.message.includes('already registered')) {
        errorMessage.value = 'Email sudah terdaftar. Silakan login.'
      } else if (error.message.includes('Invalid email')) {
        errorMessage.value = 'Format email tidak valid'
      } else {
        errorMessage.value = error.message
      }
      return
    }
    
    // Registration successful
    successMessage.value = 'âœ… Pendaftaran berhasil! Mengarahkan ke halaman login...'
    
    // Redirect to login after 2 seconds
    setTimeout(() => {
      router.push('/login')
    }, 2000)
    
  } catch (err: any) {
    errorMessage.value = err.message || 'Terjadi kesalahan. Silakan coba lagi.'
  }
}
</script>
